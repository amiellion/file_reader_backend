{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"paths": {
			"@/components/*": ["./components/*"],
			"@/constants/*": ["./constants/*"],
			"@/css_globals/*": ["./components/*"],
			"@/dummy_data/*": ["./dummy_data/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/images/*": ["./images/*"],
			"@/pages/*": ["./pages/*"],
			"@/services/*": ["./services/*"],
			"@/stories/*": ["./stories/*"],
			"@/store/*": ["./store/*"],
			"@/utils/*": ["./utils/*"],

			"@/app/widgets": ["./components/app/widgets/index"],
			"@/app/widgets/*": ["./components/app/widgets/*"],
			"@/app/widgets/buttons": ["./components/app/widgets/buttons/index"],
			"@/app/widgets/buttons/*": ["./components/app/widgets/buttons/*"],
			"@/app/widgets/cards": ["./components/app/widgets/cards/index"],
			"@/app/widgets/cards/*": ["./components/app/widgets/cards/*"],
			"@/app/widgets/form_fields": [
				"./components/app/widgets/form_fields/index"
			],
			"@/app/widgets/form_fields/*": ["./components/app/widgets/form_fields/*"],
			"@/app/widgets/forms": ["./components/app/widgets/forms/index"],
			"@/app/widgets/forms/*": ["./components/app/widgets/forms/*"],
			"@/app/widgets/http_requests": [
				"./components/app/widgets/http_requests/index"
			],
			"@/app/widgets/http_requests/*": [
				"./components/app/widgets/http_requests/*"
			],
			"@/app/widgets/modals": ["./components/app/widgets/modals/index"],
			"@/app/widgets/modals/*": ["./components/app/widgets/modals/*"],
			"@/app/widgets/tables": ["./components/app/widgets/tables/index"],
			"@/app/widgets/tables/*": ["./components/app/widgets/tables/*"],

			"@/app/system": ["./components/app/system/index"],
			"@/app/system/*": ["./components/app/system/*"]
		}
	}
}
